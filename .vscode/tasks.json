{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: clang build active file",
			"command": "/usr/bin/clang++",
			"args": [
				// "${workspaceFolder}/*.cpp",
				"${workspaceFolder}/main.cpp",
				"-g",
				"-std=c++11",
				"-o",
				"${workspaceFolder}/main"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": ["$gcc"],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/clang++"
		}
	]
}
